			</field>

			<index>
				<name>requester_uid_index</name>
				<field>
					<name>requester_uid</name>
					<sorting>ascending</sorting>
				</field>
			</index>
			<index>
				<name>recipient_uid_index</name>
				<field>
					<name>recipient_uid</name>
					<sorting>ascending</sorting>
				</field>
			</index>
		</declaration>
	</table>
</database>
